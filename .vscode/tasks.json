{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/opt/cuda/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/graphics/*.cpp",
                "${workspaceFolder}/graphics/opengl/*.cpp",
                "${workspaceFolder}/sandbox/*.cpp",
                "${workspaceFolder}/*.cpp",
                "-lglfw",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}